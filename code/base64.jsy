#IF PLAT_NODEJS
  import { u8_to_base64 } from './nodejs/base64.jsy'
  export * from './nodejs/base64.jsy'

#ELIF PLAT_WEB
  import { u8_to_base64 } from './web/base64.jsy'
  export * from './web/base64.jsy'

const _x_b64url = [/[+\/=]/g, c => '+'===c ? '-' : '/'===c ? '_' : '='===c ? '' : c ]
export const as_base64url = sz =>
  ''.replace.apply(sz, _x_b64url)

export const u8_to_base64url = u8 =>
  as_base64url(u8_to_base64(u8))

